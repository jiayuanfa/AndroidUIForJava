<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ViewStub懒加载测试"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="24dp" />

        <!-- 说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这个页面演示了ViewStub懒加载的最佳实践：\n1. 使用ViewStub延迟加载布局\n2. 代码动态创建布局\n3. 防止重复加载"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp" />

        <!-- 操作按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/btn_load_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="加载内容区域"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_load_actions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="加载操作区域"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_load_from_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="代码动态加载布局"
            android:layout_marginBottom="16dp" />

        <!-- 状态显示 -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态：未加载任何内容"
            android:textSize="12sp"
            android:textColor="#999999"
            android:padding="8dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- 测试卡片1：使用ViewStub的inflate()方法 -->
        <com.example.lazyloadview.LazyLoadCardView
            android:id="@+id/card_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 测试卡片2：使用代码动态创建布局 -->
        <com.example.lazyloadview.LazyLoadCardView
            android:id="@+id/card_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 测试卡片3：完整加载示例 -->
        <com.example.lazyloadview.LazyLoadCardView
            android:id="@+id/card_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>

