<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无障碍功能测试"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- 说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试说明：\n1. 请在设置中启用TalkBack\n2. 滑动屏幕让TalkBack聚焦到组件\n3. 听TalkBack朗读的内容\n4. 检查内容是否准确"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- ProgressBar无障碍测试 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. ProgressBar无障碍测试："
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线性进度条（默认描述）："
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <com.example.progressbar.CustomProgressBar
            android:id="@+id/progress_bar_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:progress="0.5"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="环形进度条（自定义描述）："
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <com.example.progressbar.CustomProgressBar
            android:id="@+id/progress_bar_custom_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:progress="0.75"
            app:progressMode="circular"
            android:layout_marginBottom="24dp" />

        <!-- 测试按钮 -->
        <Button
            android:id="@+id/btn_update_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更新进度（测试无障碍事件）"
            android:layout_marginBottom="24dp" />

        <!-- 标准View对比 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. 标准ProgressBar对比："
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/standard_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:max="100"
            android:contentDescription="标准进度条，当前进度50%"
            android:layout_marginBottom="24dp" />

        <!-- 无障碍功能说明 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. 无障碍功能说明："
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ 内容描述：TalkBack会朗读组件的描述\n✅ 进度信息：支持朗读当前进度值\n✅ 状态更新：进度变化时自动通知\n✅ 角色识别：系统识别为进度条组件"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- 测试步骤 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. 测试步骤："
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 打开设置 → 无障碍 → TalkBack → 开启&#10;2. 返回应用，滑动屏幕&#10;3. 当TalkBack聚焦到进度条时，会朗读：线性进度条，当前进度50%，进度条&#10;4. 点击更新进度按钮，进度变化时TalkBack会再次朗读新的进度值"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#FFF3E0"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>

