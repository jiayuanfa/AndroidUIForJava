<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组件库演示"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- 自定义搜索框 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义搜索框："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.example.searchbox.CustomSearchBox
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- 自定义弹窗按钮 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义弹窗："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示自定义弹窗"
            android:layout_marginBottom="24dp" />

        <!-- 自定义Toast按钮 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义Toast："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_toast_success"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="成功"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_toast_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="错误"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_toast_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="信息" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_toast_warning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="警告" />

        </LinearLayout>

        <!-- 自定义日期选择器 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义日期选择器："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_selected_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未选择日期"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="24dp" />

        <!-- 刷新RecyclerView测试 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新RecyclerView组件："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_refresh_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试RefreshRecyclerView"
            android:layout_marginBottom="24dp" />

        <!-- Loading组件测试 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading组件："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_loading_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试Loading组件"
            android:layout_marginBottom="24dp" />

        <!-- 进度条组件测试 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进度条组件："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_progressbar_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试进度条组件"
            android:layout_marginBottom="24dp" />

        <!-- 无障碍功能测试 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无障碍功能："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_accessibility_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试无障碍功能"
            android:layout_marginBottom="24dp" />

        <!-- ViewStub懒加载测试 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewStub懒加载："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_lazyload_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试ViewStub懒加载"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>

